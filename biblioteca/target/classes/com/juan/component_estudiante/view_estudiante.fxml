<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="537.0" prefWidth="922.0" spacing="20.0" stylesheets="@view_estudiante.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.juan.controlador.estudiante.EstudianteController">
  <children>
    <HBox alignment="CENTER" spacing="630.0">
      <children>
        <Label text="Biblioteca">
          <font>
            <Font name="System Bold Italic" size="34.0"/>
          </font>
        </Label>
        <Button fx:id="btnCerrarSesion" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#closeSesion" prefHeight="30.0" text="Cerrar Sesión"/>
      </children>
    </HBox>
    <HBox prefHeight="417.0" prefWidth="892.0" spacing="20.0">
      <children>
        <VBox prefHeight="356.0" prefWidth="542.0" spacing="20.0">
          <children>
            <HBox alignment="CENTER" maxWidth="-Infinity" prefHeight="45.0" prefWidth="542.0" spacing="125.0">
              <children>
                <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="20.0" prefWidth="150.0">
                  <children>
                    <Label maxWidth="1.7976931348623157E308" text="Genero:"/>
                    <ComboBox fx:id="selectGenero" prefWidth="150.0">
                      <VBox.margin>
                        <Insets bottom="14.0"/>
                      </VBox.margin>
                    </ComboBox>
                  </children>
                </VBox>
                <HBox alignment="CENTER" spacing="10.0">
                  <children>
                    <Label prefHeight="17.0" prefWidth="121.0" text="Buscar por libro:"/>
                    <TextField fx:id="searchLibro" prefHeight="25.0" prefWidth="168.0"/>
                  </children>
                </HBox>
              </children>
            </HBox>
            <TableView fx:id="TablaLibros" maxWidth="1.7976931348623157E308" prefHeight="265.0" prefWidth="491.0">
              <columns>
                <TableColumn prefWidth="75.0" text="ISBN"/>
                <TableColumn prefWidth="75.0" text="Titulo"/>
                <TableColumn prefWidth="75.0" text="Autor/es"/>
                <TableColumn prefWidth="75.0" text="Genero"/>
                <TableColumn prefWidth="75.0" text="Año"/>
                <TableColumn prefWidth="75.0" text="Estado"/>
              </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="50.0">
              <children>
                <Button fx:id="btnLibrosDisponibles" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="30.0" text="Libros Disponibles"/>
                <Button fx:id="btnMisLibros" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="30.0" text="Mis libros"/>
              </children>
            </HBox>
          </children>
        </VBox>
        <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="417.0" prefWidth="354.0">
          <children>
            <ImageView fx:id="portadaLibro" fitHeight="150.0" fitWidth="342.0" pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="tituloLibro" text="Titulo:">
              <font>
                <Font size="22.0"/>
              </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="61.0" prefWidth="342.0" spacing="20.0">
              <children>
                <Label fx:id="isbn" prefHeight="17.0" prefWidth="98.0" text="ISBN:"/>
                <Label fx:id="genero" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="115.0" text="Genero:"/>
                <Label fx:id="anio" layoutX="225.0" layoutY="52.0" prefHeight="17.0" prefWidth="92.0" text="Año:"/>
              </children>
            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="260.0" prefHeight="69.0" prefWidth="352.0" spacing="20.0">
              <children>
                <VBox prefHeight="69.0" prefWidth="180.0" spacing="20.0">
                  <children>
                    <Label fx:id="fechaPrestamo" prefHeight="17.0" prefWidth="164.0" text="Limite Prestamo:"/>
                    <Label fx:id="estadoLibro" layoutX="10.0" layoutY="10.0" prefHeight="17.0" prefWidth="113.0" text="Estado:"/>
                  </children>
                </VBox>
                <VBox>
                  <children>
                    <Label text="Autor/es:"/>
                    <ListView fx:id="listaAutores" prefHeight="52.0" prefWidth="175.0"/>
                  </children>
                </VBox>
              </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="306.0" prefHeight="69.0" prefWidth="352.0" spacing="20.0">
              <children>
                <Button fx:id="btnReservar" onAction="#manejarReserva" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Reservar/Prestar"/>
                <Button fx:id="btnDevolver" onAction="#manejarDevolucion" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Devolver"/>
                <Button fx:id="btnPrestamo" onAction="#manejarAlargarPrestamo" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Alargar"/>
              </children>
            </HBox>
          </children>
        </VBox>
      </children>
    </HBox>
  </children>
  <padding>
    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
  </padding>
</VBox>
